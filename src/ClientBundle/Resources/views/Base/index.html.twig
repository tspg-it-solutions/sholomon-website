<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.75, maximum-scale=0.75, minimum-scale=0.75">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block meta %}
    {% endblock meta %}
    {% block stylesheets %}
        {% stylesheets filter="scssphp" output="css/main.css" "bundles/client/scss/main.scss" %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock stylesheets %}
    <title>I'm Sholomon Pinoliad</title>
</head>
<body>
{% block body %}
{% endblock body %}
{% block javascripts %}
    <script type="text/javascript" src="https://alexfox.dev/laxxx/lib/lax.min.js"></script>
    <script type="text/javascript">
        window.onload = function() {
            document.getElementById("main").classList.add("loaded")

            lax.setup()

            const update = () => {
                lax.update(window.scrollY)
                window.requestAnimationFrame(update)
            }

            window.requestAnimationFrame(update)

            let w = window.innerWidth
            window.addEventListener("resize", function() {
                if(w !== window.innerWidth) {
                    lax.updateElements()
                }
            });
        }
    </script>
{% endblock javascripts %}
</body>
</html>